<div id="search-wrapper">
<div class="form-group row">
	<div class="input-group">
	  <input type="text" id="inputKeyword" class="form-control" placeholder="Search" aria-describedby="basic-addon1">
	  <span class="input-group-addon green-addon" id="basic-addon1">
	  	<span class="fa fa-search"></span>
	  </span>	
	</div>	
