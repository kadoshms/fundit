<div id="carousel">
{{#campaigns}}
 	<div class="col-lg-4 col-md-4 col-xs-6 thumb item campaign-box" data-id="{{_id}}">
    <div class="thumbnail">
     <div style="height:260px;overflow:hidden">
     	<img class="img-responsive item-img carousel-img" src="{{image}}" alt="">
     </div>
     <div class="camp-desc-box">
	     <h3>{{title}}</h3>
	     <h5>by {{organization_name}}</h5>
     </div>
     <div class="carousel-prog" style="width:100%;height:80px">
		<table>
			<tr>
				<td><h4 class="green">${{moneyraised}}</h4><h6>out of <span class="blue">{{moneytoraise}}</span></h6></td>
				<td><h4><span class="yellow">${{goodsraised}}</span> out of <span class="red">{{goodstoraise}}</span></h4><h6>products funded</h6></td>
			</tr>
		</table>
     </div>                   
	</div>
</div>
{{/campaigns}}
</div>
<div id="main-wrapper">
<div id="products" class="row list-group">
      <div class="row item-list">
            <div class="col-lg-12">
                <h1 class="page-header">Featured Campaigns</h1>
            </div>
            <div id="actual-items">
			{{#campaigns}}
            <div class="col-lg-4 col-md-4 col-xs-6 thumb item campaign-box" data-id="{{campaign_id}}">
                <div class="thumbnail">
                    <div style="height:260px;overflow:hidden">
                    	<img class="img-responsive item-img campaign-img" style="height:100%" src="{{image}}" alt="">
                    </div>
                    <div class="camp-desc-box">
                    	<h3>{{title}}</h3>
                    	<h5>by {{organization_name}}</h5>
                    </div>
                     <div class="camp-prog-box" style="width:100%">
						<table>
							<tr>
								<td><h4 class="green">${{moneyraised}}</h4><h6>out of <span class="blue">{{moneytoraise}}</span></h6></td>
								<td><h4><span class="yellow">{{goodsraised}}</span> out of <span class="red">{{goodstoraise}}</span></h4><h6>products funded</h6></td>
							</tr>
						</table>
                    </div>                   
                </div>
            </div>
            {{/campaigns}}
            {{^campaigns}}
            	<div id="loading" style="width:100%;text-align:center"><img src="media/image/loader.gif" class="loader" /></div>
            {{/campaigns}}
        </div>
        <div id="loading" class="hidden" style="width:100%;text-align:center"><img src="media/image/loader.gif" class="loader" /></div>
	</div>
</div>
  
</div>